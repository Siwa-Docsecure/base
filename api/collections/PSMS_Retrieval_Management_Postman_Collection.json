              "raw": "{\n  \"clientSignature\": \"data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+M9QDwADhgGAWjR9awAAAABJRU5ErkJggg==\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/retrievals/{{test_retrieval_id}}/signatures",
              "host": ["{{base_url}}"],
              "path": ["api", "retrievals", "{{test_retrieval_id}}", "signatures"]
            }
          }
        },
        {
          "name": "Add Staff Signature",
          "request": {
            "method": "PATCH",
            "header": [
